{
  "info": {
    "name": "GoPDFGenie — HTML→PDF API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "https://gopdfgenie.com/api/v1" },
    { "key": "api_key", "value": "" },
    { "key": "rapidapi_proxy_secret", "value": "" },
    { "key": "jobId", "value": "" }
  ],
  "item": [
    {
      "name": "URL → Async (create job)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "if (pm.response.code === 200) {",
              "  try { var j = pm.response.json(); if (j.jobId) {",
              "    pm.collectionVariables.set('jobId', j.jobId);",
              "    pm.environment.set('jobId', j.jobId);",
              "    console.log('Saved jobId:', j.jobId);",
              "  }} catch(e) {}",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{api_key}}", "disabled": false },
          { "key": "X-RapidAPI-Proxy-Secret", "value": "{{rapidapi_proxy_secret}}", "disabled": false }
        ],
        "url": {
          "raw": "{{base_url}}/convert/url/async?orientation=portrait&outputFormat=pdf&pageSize=A4&quality=STANDARD"
        },
        "body": { "mode": "raw", "raw": "{ \"url\": \"https://example.com\" }" }
      }
    },
    {
      "name": "Upload → Async (create job)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "if (pm.response.code === 200) {",
              "  try { var j = pm.response.json(); if (j.jobId) {",
              "    pm.collectionVariables.set('jobId', j.jobId);",
              "    pm.environment.set('jobId', j.jobId);",
              "    console.log('Saved jobId:', j.jobId);",
              "  }} catch(e) {}",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{api_key}}", "disabled": false },
          { "key": "X-RapidAPI-Proxy-Secret", "value": "{{rapidapi_proxy_secret}}", "disabled": false }
        ],
        "url": {
          "raw": "{{base_url}}/convert/async?orientation=portrait&outputFormat=pdf&pageSize=A4&quality=STANDARD"
        },
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "file", "type": "file", "src": "" }
          ]
        }
      }
    },
    {
      "name": "Status",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{api_key}}", "disabled": false },
          { "key": "X-RapidAPI-Proxy-Secret", "value": "{{rapidapi_proxy_secret}}", "disabled": false }
        ],
        "url": { "raw": "{{base_url}}/jobs/{{jobId}}/status" }
      }
    },
    {
      "name": "Result (download stream)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{api_key}}", "disabled": false },
          { "key": "X-RapidAPI-Proxy-Secret", "value": "{{rapidapi_proxy_secret}}", "disabled": false }
        ],
        "url": { "raw": "{{base_url}}/jobs/{{jobId}}/result" }
      }
    },
    {
      "name": "Download (JSON link)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{api_key}}", "disabled": false },
          { "key": "X-RapidAPI-Proxy-Secret", "value": "{{rapidapi_proxy_secret}}", "disabled": false }
        ],
        "url": { "raw": "{{base_url}}/jobs/{{jobId}}/download" }
      }
    }
  ]
}
